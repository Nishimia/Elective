@model Elective.Models.UserModels.UserEditModel
@using Elective.HtmlHelpers

@{
	ViewBag.Title = "Edit";
}

<div class="container mt-3 mb-3">
	<h2>Edit User</h2>
</div>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.UserId)
		<div class="form-group row">
			<div class="col-sm-2">
				<h5 class="pointer">
					@Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-sm-2" })
				</h5>
			</div>
			<div class="col-sm-10">
				@Html.DisplayFor(model => model.UserName)
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-2">
				<h5 class="pointer">
					@Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-sm-2" })
				</h5>
			</div>
			<div class="col-sm-10">
				@Html.DisplayFor(model => model.FirstName)
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-2">
				<h5 class="pointer">
					@Html.LabelFor(model => model.SecondName, htmlAttributes: new { @class = "control-label col-sm-2" })
				</h5>
			</div>
			<div class="col-sm-10">
				@Html.DisplayFor(model => model.SecondName)
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-2">
				<h5 class="pointer">
					@Html.LabelFor(model => model.IsTutor, htmlAttributes: new { @class = "control-label col-sm-2" })
				</h5>
			</div>
			<div class="col-sm-10">
				<div class="checkbox">
					@Html.EditorFor(model => model.IsTutor)
					@Html.ValidationMessageFor(model => model.IsTutor, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-2">
				<h5 class="pointer">
					@Html.LabelFor(model => model.IsBanned, htmlAttributes: new { @class = "control-label col-sm-2" })
				</h5>
			</div>
			<div class="col-sm-10">
				<div class="checkbox">
					@Html.EditorFor(model => model.IsBanned)
					@Html.ValidationMessageFor(model => model.IsBanned, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>

		<div class="row">
			<div class="form-group col-sm-1">
				<div class="col-sm-offset-2 col-sm-10">
					<input type="submit" value="Save" class="btn btn-primary" />
				</div>
			</div>
			<div class="col-sm-9">
				@Html.Button("Back to Users", "/User/Index", "btn-secondary", "float-right")
			</div>
		</div>
	</div>
}
